@model IEnumerable<InternshipClass.Models.Intern>

@{ ViewData["Title"] = "Loading interns from the database"; }
<h1>@ViewData["Title"]</h1>

<p>We respect privacy, GDPR and other stuff very much. Don't worry, be happy!</p>

@section scripts {
    <script type="text/javascript" src="~/js/WeatherForecast.js"></script>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationDateTime)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegistrationDateTime)
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="weather">
    <p>Date: <div id="date">29/03/21</div></p>
    <p>Temperature: <div id="temperature">12 C</div></p>
    <p>Summary: <div id="summary">cool</div></p>
</div>